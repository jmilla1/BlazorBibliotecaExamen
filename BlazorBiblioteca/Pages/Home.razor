@page "/"

<h3>Gestión de Libros</h3>

<div class="container mt-4">
    <form>
        <div class="mb-3">
            <label for="bookTitle" class="form-label">Título del Libro</label>
            <input type="text" class="form-control" id="bookTitle" placeholder="Ingresa el título del libro">
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Autor</label>
            <input type="text" class="form-control" id="author" placeholder="Ingresa el autor">
        </div>
        <div class="mb-3">
            <label for="pages" class="form-label">Número de Páginas</label>
            <input type="number" class="form-control" id="pages" placeholder="Ingresa el número de páginas">
        </div>
        <div class="mb-3">
            <label for="publishDate" class="form-label">Fecha de Publicación</label>
            <input type="date" class="form-control" id="publishDate">
        </div>
        <button type="submit" class="btn btn-success">Guardar Libro</button>
    </form>
</div>